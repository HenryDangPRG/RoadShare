   <body>
     <h1>Welcome {{user}} to the app! ID: <p style="display:inline" id="userId">{{id}}</p>, Route ID: <p style="display:inline" id="routeId">{{route_id}}</p></h1>
     <div id="map"></div>
     <div id="floating-panel">
  <p>Insert your start latitude <input id="startLat"</p>
  <p>Insert your start longitude <input id="startLong"></p>

  <p>Insert your end latitude <input id="endLat"</p>
  <p>Insert your end longitude <input id="endLong"></p>

  <button onclick="populateFields()">Populate Fields</button>
    </br></br>
  <b>Start: </b>
  <input id="start" value="New York, NY" /><br>
        <br>
  <b>End: </b>
  <input id="end" value="Newark, NJ" /><br>
  <input id="btn" value="Get Directions" type="button" />
  <button onclick="changeColor()">Change everythings color</button>
</div>
</script> 
